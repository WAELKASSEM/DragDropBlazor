<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <PackageId>WK.Blazor.DragDrop</PackageId>
    <Authors>Wael Kassem</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company />
    <Product>WK.Blazor.DragDrop</Product>
    <Description>A Drag and Drop List Component for Blazor that supports Nesting,Dragging from multiple sources and many more features.</Description>
    <RepositoryUrl>https://github.com/WAELKASSEM/DragDropBlazor</RepositoryUrl>
    <Version>1.1.0</Version>
    <PackageTags>drag-drop nesting blazor</PackageTags>
  </PropertyGroup>

  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

</Project>
